<%= render'shared/page_title', title: "Showing all recipes" %>
<% @recipes.each do |recipe|%>
<div class="row">
  <div class="col-md-2">

      <section class= "center">
        <%= gravater_for(recipe.chef, size: 120) %> 
      </section>
  </div>
  <div class="col-md-8 well">
    <h4><%=link_to recipe.name, recipe_path(recipe)%>
    <p><%= truncate(recipe.description, length: 150)%> </p> </h4>
    <small><%= time_ago_in_words(recipe.created_at)%> </small>
  </div>
</div>

<%end%>
