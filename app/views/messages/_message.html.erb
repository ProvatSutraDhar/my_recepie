<div class="message">
    <p>
      <small><em> Created <%= time_ago_in_words(message.created_at)%> ago</em></small>
     </p>

    <p>
      <%= gravater_for(message.chef, size: 50)%>
      <strong>
        <%= message.chef.chefname.capitalize%>:
        <span class="content">
          <%=message.content%>
        </span>
      </strong>
    </p>

</div>
