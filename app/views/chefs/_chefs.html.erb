
  <div class="center">
    <% @chefs.each do |chef|%>
    <div class="row">
      <ul class = "listing">
        <div class="col-md-4 col-md-offset-4 well">
            <li><%= link_to gravater_for(chef), chef_path(chef)%></li>
            <li class="chef-title"><%= link_to chef.chefname.capitalize, chef_path(chef) %></li>
                <% if chef.recipes.count != 0 %>
                <li><small><%= pluralize(chef.recipes.count, "recipe")%></small></li>
                <%else%>
                <h6> not yet added any recipe </h6>
                <% end %>
        </div>
      </ul>
        </div>
      <%end%>
  </div>
