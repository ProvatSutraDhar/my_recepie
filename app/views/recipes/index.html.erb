<h1 align="center"> Welcome to our Recipes </h1>
<hr>

<% @recipes.each do |recipe|%>
<div class="row">
  <div class="col-md-2">
      <section class= "center">

      </section>
  </div>

  <div class="col-md-8 well">
    <h4><%= recipe.name%>
    <p><%= truncate(recipe.description, length: 150)%> </p> </h4>
    <small><%= time_ago_in_words(recipe.created_at)%> </small>

  </div>

</div>


<%end%>
