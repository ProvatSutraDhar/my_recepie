
<%= render'shared/page_title', title: "Avaiable ingredients" %>
<div align= "center">
<%=will_paginate%>
</div>

<div align= "center">
  <% @ingredients.each do |ing|%>
    <ul class = "listing">
      <div class="row">
      <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to ing.name.capitalize, ingredient_path(ing) %></li>
          <% if ing.recipes.count != 0 %>
          <li><small><%= pluralize(ing.recipes.count, "recipe")if ing.recipes %></small></li>
              <% if logged_in? && current_chef.admin? %>
              <li><%=link_to "Edit this ingredient", ingredient_path(ing) %></li>
              <%end%>
          <%else%>
          <h6> Not yet used in any recipe </h6>
          <% end %>
      </div>
    </div>
    </ul>
<%end%>
</div>
    <div align= "center">
    <%=will_paginate%>
  </div>
