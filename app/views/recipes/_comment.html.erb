<div align="center">
      <h3>Comments</h3>
        <hr>
  </div>
<div class="center">
    <div class="col-md-8 col-md-offset-2">
            <%= form_for([@recipe,@comment], :html => {class: "form-horizontal", role: "form"}) do |f|%>
                <div class="form-group">
                    <div class="control-label col-md-2">
                    <%= f.label :Comment %>
                  </div>
                      <div class="col-md-8">
                      <%=f.text_area :description, rows:3, class: "form-control", placeholder: "Entre your comments"%>
                      </div>
                </div>

              </div>
                <div class="from-group">
                  <div class="col-md-offset-4 col-md-4 ">
                    <%=f.submit class: "btn btn-primary btn-large" %>
                  </div>
                </div>
            <%end%>


</div>
